<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="mh_all_in_one_hide_action_menu.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <!-- Before the export button -->
        <xpath expr="//t[contains(@t-if, 'activeActions.exportXlsx')]" position="replace">
            <t t-if="!hideExportButton">
                <t t-if="nbTotal and !nbSelected and activeActions.exportXlsx and isExportEnable and !env.isSmall">
                    <t t-esc="hideExportAllButton"/>
                    <button type="button" class="btn btn-secondary fa fa-download o_list_export_xlsx" data-tooltip="Export All" aria-label="Export All" t-on-click="onDirectExportData"/>
                </t>
            </t>
        </xpath>
    </t>
</templates>

