<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_many2one_field_change_label_config_tree" model="ir.ui.view">
        <field name="name">many2one.field.change.label.config.tree</field>
        <field name="model">many2one.field.change.label.config</field>
        <field name="arch" type="xml">
            <tree string="Change Many2One Field Option Label">
                <field name="model_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_many2one_field_change_label_config_form" model="ir.ui.view">
        <field name="name">many2one.field.change.label.config.form</field>
        <field name="model">many2one.field.change.label.config</field>
        <field name="arch" type="xml">
            <form string="Change Many2One Field Option Label">
                <group>
                    <field name="model_id" required="1" help="Select model in which you want to change Many2One Field Options Label." placeholder="Select model in which you want to change Many2One Field Options Label."/>
                    <field name="is_active"/>
                </group>
                <notebook colspan="4">
                    <page string="Field Information">
                        <field name="config_line_ids">
                            <tree editable="bottom">
                                <field name='fields_id' required="1" help="Choose field to change m2o options label." placeholder="Choose field to change m2o options label." domain="[('model_id', '=', parent.model_id),('ttype', '=', 'many2one')]"/>
                                <field name='create_label' placeholder="Create Label"/>
                                <field name='create_and_edit' placeholder="Create and Edit... Label"/>
                                <field name='search_more_label' placeholder="Search More... Label"/>
                                <field name='start_typing_label' placeholder="Start typing... Label"/>
                                <field name='no_record_label' placeholder="No records Label"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_many2one_field_change_label_config" model="ir.actions.act_window">
        <field name="name">Change Many2One Field Option Label</field>
        <field name="res_model">many2one.field.change.label.config</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_many2one_field_change_label_config_tree"/>
    </record>

    <menuitem id="menu_many2one_field_change_label_config" name="M2O Field Option Label" groups="base.group_erp_manager"
              action="action_many2one_field_change_label_config"/>

</odoo>

