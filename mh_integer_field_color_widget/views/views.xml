<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherited_for_widget" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.for.widget</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Locate the children field and add the widget -->
            <field name="km_home_work" position="attributes">
                <attribute name="widget">color_integer</attribute>
                <attribute name="options">{'threshold': 10, 'belowThresholdColor': 'grey', 'aboveThresholdColor': 'blue', 'belowThresholdTextColor': 'white', 'aboveThresholdTextColor': 'white'}</attribute>
            </field>
        </field>
    </record>
</odoo>


