<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="mh_integer_field_step_input_widget.StepInputWidget">
        <div class="o_step_input_widget">
            <button t-on-click="decrement" class="btn btn-secondary o_step_input_button">-</button>
            <input
                type="number"
                t-att-id="props.id"
                t-att-value="state.value"
                class="o_input o_field_integer o_step_input_field"
                readonly="readonly"
            />
            <button t-on-click="increment" class="btn btn-secondary o_step_input_button">+</button>
            <button t-on-click="refresh" class="btn btn-secondary o_step_input_button"><i class='fa fa-refresh'/></button>
        </div>
    </t>
</templates>
