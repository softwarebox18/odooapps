<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherited_for_widget" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.for.widget</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Locate the children field and add the widget -->
            <field name="children" position="attributes">
                <attribute name="widget">step_input</attribute>
                <attribute name="options">{'step': 1, 'min_value': 0, 'max_value': 5}</attribute>
            </field>
        </field>
    </record>
</odoo>


